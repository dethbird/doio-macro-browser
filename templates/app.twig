<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title|default('DOIO Macro Browser') }}</title>
  <style>
    html, body { height: 100%; margin: 0; }
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Helvetica, Arial, sans-serif; }
    #root { min-height: 100%; }
  </style>
  {# Include built CSS from Vite manifest (array of hrefs) #}
  {% if css is iterable %}
    {% for href in css %}
      <link rel="stylesheet" href="{{ href }}">
    {% endfor %}
  {% endif %}
</head>
<body>
  <div id="root">Loadingâ€¦</div>

  {# Include built JS from Vite manifest #}
  {% if js %}
    <script type="module" src="{{ js }}"></script>
  {% endif %}
</body>
</html>
